# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_ADAPTER=sqlite
# Options: mysql, postgresql, sqlite, supabase

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=ecommerce_coupons

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DATABASE=ecommerce_coupons
POSTGRES_SSL=false

# SQLite Configuration
SQLITE_PATH=./data/ecommerce_coupons.db

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Scraper Configuration
SCRAPE_INTERVAL=60000
MAX_CONCURRENT_SCRAPERS=5
SCRAPE_TIMEOUT=30000
MAX_RETRIES=3
DELAY_BETWEEN_REQUESTS=2000
USER_AGENT_ROTATION=true
PROXY_ROTATION=false

# Browser Configuration
BROWSER_HEADLESS=true

# Platform Toggles
SHOPEE_ENABLED=true
TOKOPEDIA_ENABLED=true
LAZADA_ENABLED=true
BLIBLI_ENABLED=true
TRAVELOKA_ENABLED=false
GRAB_ENABLED=false

# API Security
SCRAPER_API_KEY=your-secret-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=scraper.log

# Vercel Configuration
VERCEL_URL=your-vercel-app.vercel.app