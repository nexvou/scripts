{
    "name": "nexvou-scripts",
    "version": "1.0.0",
    "description": "Production-ready e-commerce coupon scraper for Indonesian platforms",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "scrape": "node src/cli/scrape.js",
        "scrape:single": "node src/cli/scrape.js --platform",
        "migrate": "node src/cli/migrate.js",
        "seed": "node src/cli/seed.js",
        "purchase": "node src/cli/purchase.js",
        "purchase:demo": "node demo/purchase-demo.js",
        "purchase:real": "node demo/real-usage-example.js",
        "coupons": "node src/cli/coupon-cli.js",
        "coupons:list": "node src/cli/coupon-cli.js list",
        "coupons:all": "node src/cli/coupon-cli.js all",
        "coupons:show": "node src/cli/coupon-cli.js show",
        "coupons:use": "node src/cli/coupon-cli.js use",
        "coupons:stats": "node src/cli/coupon-cli.js stats",
        "test": "node --experimental-vm-modules node_modules/.bin/jest --passWithNoTests",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration",
        "test:e2e": "jest --testPathPattern=tests/e2e",
        "lint": "eslint src/ --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "build": "echo 'No build step required for Node.js'",
        "vercel-build": "npm run migrate",
        "deploy": "vercel --prod"
    },
    "keywords": [
        "scraper",
        "ecommerce",
        "coupons",
        "shopee",
        "tokopedia",
        "lazada",
        "indonesia",
        "vercel",
        "serverless"
    ],
    "author": "Nexvou Scraper",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.55.0",
        "axios": "^1.11.0",
        "chalk": "^5.6.0",
        "cheerio": "^1.1.2",
        "commander": "^11.1.0",
        "dotenv": "^16.6.1",
        "knex": "^3.1.0",
        "mysql2": "^3.14.3",
        "node-cron": "^3.0.3",
        "pg": "^8.16.3",
        "playwright": "^1.54.2",
        "puppeteer": "^24.16.2",
        "puppeteer-core": "^24.16.2",
        "sqlite3": "^5.1.7",
        "uuid": "^9.0.1",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/node": "^20.19.11",
        "eslint": "^8.57.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.1.5",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "supertest": "^6.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nexvou/scripts.git"
    },
    "bugs": {
        "url": "https://github.com/nexvou/scripts/issues"
    },
    "homepage": "https://github.com/nexvou/scripts#readme",
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
