{
  "name": "ecommerce-coupon-scraper",
  "version": "1.0.0",
  "description": "Production-ready e-commerce coupon scraper for Indonesian platforms",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "scrape": "node src/cli/scrape.js",
    "scrape:single": "node src/cli/scrape.js --platform",
    "migrate": "node src/cli/migrate.js",
    "seed": "node src/cli/seed.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "build": "echo 'No build step required for Node.js'",
    "vercel-build": "npm run migrate",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "scraper",
    "ecommerce",
    "coupons",
    "shopee",
    "tokopedia",
    "lazada",
    "indonesia",
    "vercel",
    "serverless"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "knex": "^3.1.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "playwright": "^1.40.0",
    "puppeteer": "^21.11.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ecommerce-coupon-scraper.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ecommerce-coupon-scraper/issues"
  },
  "homepage": "https://github.com/yourusername/ecommerce-coupon-scraper#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
